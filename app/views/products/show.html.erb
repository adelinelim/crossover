<div class="product">
  <p>
    <strong>Name:</strong>
    <%= @product.name %>
  </p>

  <p>
    <strong>Description:</strong><br>
    <%= @product.description %>
  </p>

  <p>
    <strong>Image url:</strong><br>
    <%= image_tag @product.image_url %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= number_to_currency(@product.price) %>
  </p>

  <% if admin_signed_in? %>
    <p>
      <strong>Status:</strong>
      <%= @product.status %>
    </p>
  <% end %>
</div>

<div class="actions">
  <%= form_for "add_to_cart", url: add_to_cart_path(id: @product.id), method: :post, html: { class: "add-to-cart" } do %>
    <%= submit_tag "Add to Cart", class: "button" %>
  <% end %>
  <%#= link_to 'Add to Cart', add_to_cart_product(id: @product.id), class: "button" %>
  <% if admin_signed_in? %>
    <%= link_to 'Edit', edit_product_path(@product), class: "button" %>
  <% end %>
  <%= link_to 'Back', products_path, class: "button back-button" %>
</div>
