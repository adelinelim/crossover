<div class="registration">
  <h1>Registration</h1>

  <%= simple_form_for(@customer, url: customer_registration_path(@customer)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, required: true %>
    </div>

    <div class="field">
      <%= f.label t(".first_name") %><br />
      <%= f.input_field :firstname %>
    </div>

    <div class="field">
      <%= f.label t(".last_name") %><br />
      <%= f.input_field :lastname %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", required: true %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "button" %>
    </div>
  <% end %>
</div>
